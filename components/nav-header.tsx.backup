"use client";

import { useState } from "react";
import Link from "next/link";
import { usePathname } from "next/navigation";
import { motion } from "framer-motion";
import { Menu, Mail } from "lucide-react";
import { Button } from "@/components/ui/button";
import { ContactForm } from "@/components/contact-form";
import {
  Sheet,
  SheetContent,
  SheetHeader,
  SheetTitle,
  SheetDescription,
  SheetTrigger,
  SheetClose
} from "@/components/ui/sheet";

export function NavHeader() {
  const pathname = usePathname();
  const [contactOpen, setContactOpen] = useState(false);

  // Navigation Items
  const navItems = [
    { name: "Research", href: "/#research" },
    { name: "Experience", href: "/experience" },
    { name: "Archive", href: "/archive" },
  ];

  // Intelligent Contact Handler
  const handleContactClick = (e: React.MouseEvent) => {
    e.preventDefault();
    
    if (pathname === "/") {
      // Scenario A: On Home Page -> Scroll to Contact Section
      const contactSection = document.getElementById("contact");
      if (contactSection) {
        contactSection.scrollIntoView({ behavior: "smooth" });
      }
    } else {
      // Scenario B: On Other Pages -> Open Slide-over Panel
      setContactOpen(true);
    }
  };

  // Smooth Scroll Handler for Home Sections
  const handleNavClick = (e: React.MouseEvent<HTMLAnchorElement>, href: string) => {
    if (pathname === "/" && href.startsWith("/#")) {
      e.preventDefault();
      const targetId = href.replace("/#", "");
      const elem = document.getElementById(targetId);
      elem?.scrollIntoView({ behavior: "smooth" });
    }
  };

  return (
    <>
      <motion.header 
        initial={{ y: -100 }}
        animate={{ y: 0 }}
        transition={{ duration: 0.5 }}
        className="fixed top-0 left-0 right-0 z-50 flex justify-between items-center px-6 py-4 border-b border-slate-800/50 bg-slate-950/80 backdrop-blur-md supports-[backdrop-filter]:bg-slate-950/50"
      >
        <Link href="/" className="text-xl font-serif font-bold tracking-tight text-slate-100 hover:opacity-80 transition-opacity">
          KrDevanshu<span className="text-teal-400">06.</span>
        </Link>

        {/* Desktop Navigation */}
        <nav className="hidden md:flex items-center gap-8">
          {navItems.map((item) => (
            <Link 
              key={item.name} 
              href={item.href}
              onClick={(e) => handleNavClick(e, item.href)}
              className="text-sm font-mono text-slate-400 hover:text-teal-400 transition-colors duration-300 uppercase tracking-wider"
            >
              {item.name}
            </Link>
          ))}
          
          {/* The Intelligent Contact Button */}
          <button
            onClick={handleContactClick}
            className="text-sm font-mono text-teal-400 hover:text-teal-300 transition-colors duration-300 uppercase tracking-wider border border-teal-500/30 px-4 py-1.5 rounded hover:bg-teal-500/10"
          >
            Contact
          </button>
        </nav>

        {/* Mobile Navigation via Sheet */}
        <div className="md:hidden">
          <Sheet>
            <SheetTrigger asChild>
              <Button variant="ghost" size="icon" className="text-slate-300 hover:text-teal-400">
                <Menu className="h-6 w-6" />
                <span className="sr-only">Toggle menu</span>
              </Button>
            </SheetTrigger>
            <SheetContent side="right" className="bg-slate-950 border-l-slate-800 w-[300px]">
              <SheetHeader>
                <SheetTitle className="font-serif text-left text-teal-500">Navigation</SheetTitle>
              </SheetHeader>
              <div className="flex flex-col gap-6 mt-8">
                {navItems.map((item) => (
                  <SheetClose key={item.name} asChild>
                    <Link 
                      href={item.href}
                      onClick={(e) => handleNavClick(e, item.href)}
                      className="text-lg font-mono text-slate-400 hover:text-teal-400 transition-colors uppercase tracking-widest"
                    >
                      {item.name}
                    </Link>
                  </SheetClose>
                ))}
                {/* Mobile Contact Button */}
                <SheetClose asChild>
                  <button 
                    onClick={handleContactClick}
                    className="text-lg font-mono text-teal-400 text-left uppercase tracking-widest"
                  >
                    Contact
                  </button>
                </SheetClose>
              </div>
            </SheetContent>
          </Sheet>
        </div>
      </motion.header>

      {/* --- GLOBAL CONTACT SLIDE-OVER (For Non-Home Pages) --- */}
      <Sheet open={contactOpen} onOpenChange={setContactOpen}>
        <SheetContent side="right" className="w-full sm:max-w-md bg-slate-950 border-l-slate-800 p-0 overflow-y-auto">
          <div className="p-6">
            <SheetHeader className="mb-8 text-left">
              <div className="w-12 h-12 bg-teal-900/20 rounded-full flex items-center justify-center mb-4 border border-teal-900/50">
                <Mail className="w-6 h-6 text-teal-500" />
              </div>
              <SheetTitle className="font-serif text-3xl text-slate-100">
                Initialize Signal
              </SheetTitle>
              <SheetDescription className="font-sans text-slate-400 text-base">
                Have a project in mind or want to discuss engineering architectures? Transmit a message.
              </SheetDescription>
            </SheetHeader>
            
            {/* Reusing your existing Contact Form */}
            <div className="bg-slate-900/30 border border-slate-800 rounded-xl p-1">
               <div className="p-4">
                 <ContactForm />
               </div>
            </div>
          </div>
        </SheetContent>
      </Sheet>
    </>
  );
}

      {/* Desktop Navigation */}
      <nav className="hidden md:flex gap-8">
        {navItems.map((item) => (
          <Link 
            key={item.name} 
            href={item.href}
            onClick={(e) => handleScroll(e, item.href, item.isSection)}
            className="text-sm font-mono text-slate-400 hover:text-teal-400 transition-colors duration-300 uppercase tracking-wider"
          >
            {item.name}
          </Link>
        ))}
      </nav>

      {/* Mobile Navigation via Sheet */}
      <div className="md:hidden">
        <Sheet>
          <SheetTrigger asChild>
            <Button variant="ghost" size="icon" className="text-slate-300 hover:text-teal-400">
              <Menu className="h-6 w-6" />
              <span className="sr-only">Toggle menu</span>
            </Button>
          </SheetTrigger>
          <SheetContent side="right" className="bg-slate-950 border-l-slate-800 w-[300px]">
            <SheetHeader>
              <SheetTitle className="font-serif text-left text-teal-500">Navigation</SheetTitle>
            </SheetHeader>
            <div className="flex flex-col gap-6 mt-8">
              {navItems.map((item) => (
                <SheetClose key={item.name} asChild>
                  <Link 
                    href={item.href}
                    onClick={(e) => handleScroll(e, item.href, item.isSection)}
                    className="text-lg font-mono text-slate-400 hover:text-teal-400 transition-colors uppercase tracking-widest"
                  >
                    {item.name}
                  </Link>
                </SheetClose>
              ))}
            </div>
          </SheetContent>
        </Sheet>
      </div>
    </motion.header>
  );
}
